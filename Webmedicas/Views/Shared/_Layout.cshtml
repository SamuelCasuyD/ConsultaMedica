<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dataTables")
    @Styles.Render("~/sweetalert/sweetAlertStyles")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="fixed-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand mb-1 h1" href="@Url.Action("Index", "Home" , new { area="" })">Consultas Medicas</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link mb-0 h6" href="@Url.Action("Index", "Home" , new { area="" })">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h6" href="@Url.Action("ListPacientes", "ControlPaciente" , new { area="" })">Pacientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mb-0 h6" href="@Url.Action("ListMedicos", "ControlMedicos" , new { area="" })">Medicos</a>
                    </li>
                </ul>
                @*<form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
            </div>
        </nav>
    </div>
    <div class="container body-content" style="padding-top:25px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/Popper")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bootstrap")
    @Scripts.Render("~/Scripts/dataTables")
    @Scripts.Render("~/plugins/sweetAlert")
    @RenderSection("scripts", required: false)
</body>
</html>
